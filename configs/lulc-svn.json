                "label": "No Data",
                "color": "#ffffff"
            },
            "1": {
                "label": "Cultivated Land",
                "color": "#ffa500"
            },
            "2": {
                "label": "Forest",
                "color": "#054907"
            },
            "3": {
                "label": "Grassland",
                "color": "#aaff32"
            },
            "4": {
                "label": "Shrubland",
                "color": "#806000"
            },
            "5": {
                "label": "Water",
                "color": "#069af3"
