                    "split_confidence": 0.0000001,
                    "tie_threshold": 0.05,
                    "binary_splits": false,
                    "stop_mem_management": false,
                    "remove_poor_atts": false,
                    "leaf_learner": "NB",
                    "bb_threshold": 0,
